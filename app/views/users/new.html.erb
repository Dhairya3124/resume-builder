<div class="flex justify-center items-center h-screen w-full bg-blue-400">
    <div class="w-1/2 bg-white rounded shadow-2xl p-8 m-4">
        <h1 class="block w-full text-center text-gray-800 text-2xl font-bold mb-6">Register</h1>
        <%= form_for(:user, url: signup_path) do |f| %>
        <form>
            <div class="flex flex-col mb-4">
            <%= f.text_field :name, class: "w-full mb-2 mb-2 font-bold text-lg text-gray-900", placeholder: "Name" %>

            </div>
            
            <div class="flex flex-col mb-4">
            <%= f.email_field :email, class: "w-full mb-2 mb-2 font-bold text-lg text-gray-900", placeholder: "Email" %>

            </div>
            <div class="flex flex-col mb-4">
            <%= f.password_field :password, class: "w-full mb-2 mb-2 font-bold text-lg text-gray-900", placeholder: "Password" %>

            </div>
            <div class="flex w-full p-4">
              <%= f.submit "CREATE ACCOUNT", class: "block bg-blue-400 hover:bg-teal-600 text-white uppercase text-lg mx-auto p-4 rounded" %>
            </div>
        </form>
        <% end %>  
        <a class="block w-full text-center no-underline mt-4 text-sm text-gray-700 hover:text-gray-900" href="/login">Already have an account?</a>
    </div>
</div>